{
  "authentication": {
	  "passport": {
	    "strategy":{
	      "facebook": {
	        "clientID": "FACEBOOK_APP_ID",
	        "clientSecret": "FACEBOOK_APP_SECRET",
	        "callbackURL": "https://www.example.com/auth/facebook/callback"
	      }
	    }
	  }
  },
  "databases": {

    "mongodb": {
      "host": "localhost",
      "port": "27017", // Default MongoDB portr
      "db": "myapp", // db name
      "connectionOptions": {
        "db": { 
          "native_parser": true
        },
        "server": { 
          "poolSize": 5 
        },
        "replset": { 
          "rs_name": "myReplicaSetName" 
        },
        "user": "",
        "pass": "" 
      },
      "collections": {
        "currenciesQuotes": {
          "name": "currenciesQuotes",
          "schema": {
            "change": "Number",
            "chg_percent": "Number",
            "name": "String",
            "price": "Number",
            "symbol": "String",
            "ts": "Number",
            "type": "String",
            "utctime": { "type": "Date" },
            "volume": "Number"
          },
          "schemaOptions": { "strict": false },
          "displayName": "currencies quotes"
        }
      }
    },

  	"leveldb": {
  		"collections": {
  			"users": { // this what should be used to call the collection programmatically
  				"name": "user", // this is the real path name
          "displayName": "users" // this is the display name
  			},
        "roles": {
          "name": "role",
          "displayName": "roles"
        },
        "posts": {
          "name": "post",
          "displayName": "posts"
        },
        "languages": {
          "name": "language",
          "displayName": "languages"
        },
        "countries": {
          "name": "country",
          "displayName": "countries"
        },
        "currencies": {
          "name": "currency",
          "displayName": "currencies"
        }        
  		}
  	}

  }
}