extends layout

block content
  .container-fluid
    .row
      .col-xs-10.col-sm-10.col-md-10.col-lg-10.col-xs-offset-1.col-sm-offset-1.col-md-offset-1.col-lg-offset-1
        if message
          .alert.alert-danger(role='alert')
            h1= message

        if error && error.status
          h2= error.status
        if error && error.stack  
          pre #{error.stack}
